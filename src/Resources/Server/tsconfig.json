{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		],
		"baseUrl": "./src",
		"resolveJsonModule": true
	},
	"lib": ["es2015"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
