	"dependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.7",
		"@types/express": "^4.17.8",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mongoose": "^5.7.36",
		"@types/node": "^14.11.1",
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"helmet": "^4.1.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.10.6"
	},
	"devDependencies": {
		"dotenv": "^8.2.0",
		"husky": "^4.2.5",
		"lint-staged": "^8.1.7",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^6.1.2",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.9.5"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
